/* components/comments/comments.wxss */
@import "../../utils/flexcss.wxss";


.userinfo-avatar {
    width: 80rpx;
    height: 80rpx;
    margin:20rpx 20rpx 0 20rpx;
    border-radius: 50%;
    border:2px solid #fff;
}
.user-nickname{
    font-size: 26rpx;
    /* padding-bottom:2rpx; */
}
.user-comment-time{
    font-size:18rpx;
    margin-top: 2rpx;
}
.user-comment-star{
    padding-top:4rpx;
}
.user-comment-star-image{
    height: 22rpx;
    width: 22rpx;
}
.user-zan{
    margin:24rpx;
    height: 46rpx;
}
.zan-font{
    font-size: 26rpx;
    color: #8a8a8a;
    margin-right: 8rpx;
}
.comment-content{
    padding:10rpx 26rpx 30rpx 26rpx;
    font-size:26rpx;
    line-height:44rpx;
    color:#515151;
}
.comments-details{
    border-bottom:6px solid #e2e2e2;
}