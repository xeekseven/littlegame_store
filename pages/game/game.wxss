/* pages/game/game.wxss */
@import "../../utils/flexcss.wxss";

.game-header {
  height: 350rpx;
  text-align: center;
}

.game-search {
  width: 100%;
  height: 65rpx;
  margin-top: 20rpx;
  position: absolute;
  z-index: 10;
}

.game-search-input-left {
  border-top-left-radius: 34rpx;
  border-bottom-left-radius: 34rpx;
  background-color: #f8f8f8;
  width: 100rpx;
  height: 65rpx;
}

.game-search-input-right {
  border-top-right-radius: 34rpx;
  border-bottom-right-radius: 34rpx;
  background-color: #f8f8f8;
  width: 530rpx;
  height: 65rpx;
}

.game-search-input-right:hover {
  border: 1px solid #1296db;
}

swiper {
  height: 350rpx;
}

.swiper-item-img {
  width: 100%;
}

.game-category {
  position: relative;
  width: 100%;
  margin-top: -30rpx;
  z-index: 100;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  margin-bottom: 10rpx;
}

.game-category-row {
  padding: 0rpx 40rpx 0 40rpx;
}

.category-item {
  border-radius: 35rpx;
  margin: 10rpx 0rpx;
  width: 20%;
  font-family: Microsoft YaHei;
  font-size: 14px;
}

.categoru-item-wall {
  padding: 16rpx;
  height: 45rpx;
  border-radius: 45rpx;
  border: 1px solid #000;
}

.category-item-icon {
  height: 45rpx;
  width: 45rpx;
}

.category-item-title {
  margin-top: 0rpx;
}

.game-now {
  height: 140rpx;
  background-color: #e8e8e8;
}
.game-rank-first{
  border-radius: 20rpx;
  background-color: #e1ef0e;
  height: 40rpx;
  width: 40rpx;
  font-size: 14px;
  color: #fff;
}
.game-rank{
  width: 12%;
}
.game-rank-image{
  margin-right: 10rpx;
}
.game-image{
  height: 120rpx;
  width: 120rpx;
}
